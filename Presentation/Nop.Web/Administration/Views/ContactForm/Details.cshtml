@model ContactFormModel
@{
    //page title
    ViewBag.Title = T("Admin.System.ContactForm.Details").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-system.png")" alt="" />
            @T("Admin.System.ContactForm.Details") @Html.ActionLink("(" + T("Admin.System.ContactForm.BackToList") + ")", "List")
        </div>
        <div class="options">
            <span id="contactform-delete" class="k-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>


    @Html.HiddenFor(model => model.Id)

    <table class="adminContent">
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.CreatedOn):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.CreatedOn)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.Email):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.FullName)
                <text>-</text>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.Subject):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.Subject)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.Enquiry):
            </td>
            <td class="adminData">
                @Html.Raw(Model.Enquiry)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.IpAddress):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.IpAddress)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.Store):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.Store)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.EmailAccountName):
            </td>
            <td class="adminData">
                @Html.DisplayFor(model => model.EmailAccountName)
            </td>
        </tr>
    </table>
}
@Html.DeleteConfirmation("contactform-delete")
