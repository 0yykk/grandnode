@model OrderAddressModel
@{  
    //page title
    ViewBag.Title = T("Admin.Orders.Address.EditAddress").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cube"></i>
                        @T("Admin.Orders.Address.EditAddress") 
                        @Html.ActionLink("(" + T("Admin.Orders.Address.BackToOrder") + ")", "Edit", new { id = Model.OrderId })
                    </div>
                    <div class="actions">
                        <input type="submit" name="save" class="btn default" value="@T("Admin.Common.Save")" />                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdateAddress", Model)
                </div>
            </div>
        </div>
    </div>

}
