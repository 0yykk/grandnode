@model CustomerRoleModel
@{
    //page title
    ViewBag.Title = T("Admin.Customers.CustomerRoles.EditCustomerRoleDetails").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i>
                        @T("Admin.Customers.CustomerRoles.EditCustomerRoleDetails") - @Model.Name 
                        <small>@Html.ActionLink("(" + T("Admin.Customers.CustomerRoles.BackToList") + ")", "List")</small>
                        </div>
                    <div class="actions">
                        <input type="submit" name="save" class="btn default" value="@T("Admin.Common.Save")" />
                        <input type="submit" name="save-continue" class="btn default" value="@T("Admin.Common.SaveContinue")" />
                        <span id="customerrole-delete" class="btn red">@T("Admin.Common.Delete")</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>
            </div>
        </div>
    </div>


}
@Html.DeleteConfirmation("customerrole-delete")