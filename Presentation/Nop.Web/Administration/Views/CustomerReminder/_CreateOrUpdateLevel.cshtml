            @Html.ValidationMessageFor(model => model.Day)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.Hour)
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.Hour)
            @Html.ValidationMessageFor(model => model.Hour)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.EmailAccounts)
        </td>
        <td class="adminData">
            @Html.DropDownListFor(model => model.EmailAccountId, Model.EmailAccounts)
