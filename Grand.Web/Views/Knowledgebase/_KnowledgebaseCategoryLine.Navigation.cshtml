@model Grand.Web.Models.Knowledgebase.KnowledgebaseCategoryModel

<ul class="sublist">
    <li class="active">
        @if (Model.IsCurrent)
        {
            <a href="@Url.RouteUrl("ArticlesByCategory", new { categoryId = Model.Id})"><strong>@Model.Name</strong></a>
        }
        else
        {
            <a href="@Url.RouteUrl("ArticlesByCategory", new { categoryId = Model.Id})">@Model.Name</a>
        }

        @foreach (var category in Model.Children)
        {
            @await Html.PartialAsync("_KnowledgebaseCategoryLine.Navigation", category)
        }
    </li>
</ul>