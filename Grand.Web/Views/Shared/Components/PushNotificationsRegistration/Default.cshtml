@model Grand.Web.Models.PushNotifications.PublicInfoModel

@if (Model.AddScript)
{
    Html.AddScriptParts(ResourceLocation.Footer, "https://www.gstatic.com/firebasejs/4.12.1/firebase.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Scripts/jquery.push.notifications.js");
    <script>
        $(document).ready(function () {
            PushNotifications.init("@Model.PublicApiKey", "@Model.SenderId", "@Model.ProjectId", "@Model.AuthDomain", "@Model.StorageBucket",
                "@Model.DatabaseUrl", "@Url.Action("ProcessRegistration", "PushNotifications")");
            PushNotifications.process();
        });
    </script>
}