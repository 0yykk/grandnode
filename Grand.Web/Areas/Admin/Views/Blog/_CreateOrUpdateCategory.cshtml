@model BlogCategoryModel
@inject IEventPublisher eventPublisher
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<admin-tabstrip name="blog-category-edit">
    <items>
        <tabstrip-item text="@T("Admin.ContentManagement.Blog.BlogCategory.Info")" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdateCategory.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.ContentManagement.Blog.BlogCategory.Posts")" tab-index="1">
            <content>
                <div>
                    <partial name="_CreateOrUpdateCategory.Posts" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.ContentManagement.Blog.BlogCategory.Stores")" tab-index="2">
            <content>
                <div>
                    <partial name="_TabStores" model="Model" />
                </div>
            </content>
        </tabstrip-item>
    </items>
</admin-tabstrip>

@{
    //custom tabs
    var eventMessage = new AdminTabStripCreated(this.Html, "blog-category-edit");
    await eventPublisher.Publish(eventMessage);
    foreach (var eventBlock in eventMessage.BlocksToRender)
    {
        <admin-tab-append tab-strip-name="blog-category-edit" tab-name="@eventBlock.tabname" tab-content="@eventBlock.content" />
    }
}
@*save selected tab index*@
<input type="hidden" id="selected-tab-index" name="selected-tab-index" value="@(GetSelectedTabIndex())">
