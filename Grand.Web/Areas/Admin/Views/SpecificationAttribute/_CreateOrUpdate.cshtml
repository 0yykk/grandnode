@model SpecificationAttributeModel
@inject IEventPublisher eventPublisher
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<admin-tabstrip name="specificationattribute-edit">
    <items>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.SpecificationAttributes.Info")" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.SpecificationAttributes.Options")" tab-index="1">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabOptions" model="Model" />
                </div>
            </content>
        </tabstrip-item>
    </items>
</admin-tabstrip>
@{
    //custom tabs
    var eventMessage = new AdminTabStripCreated(this.Html, "specificationattribute-edit");
    await eventPublisher.Publish(eventMessage);
    foreach (var eventBlock in eventMessage.BlocksToRender)
    {
        <admin-tab-append tab-strip-name="specificationattribute-edit" tab-name="@eventBlock.tabname" tab-content="@eventBlock.content" />
    }
}