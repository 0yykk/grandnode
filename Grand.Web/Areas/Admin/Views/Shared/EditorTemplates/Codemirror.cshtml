@model String
<div class="mt-5">
<textarea id="@Html.IdForModel()" name="@Html.NameForModel()">@Model</textarea>
</div>

<script>
    var textarea = $('#@Html.IdForModel()')[0];
    $(window).bind('load', function () {
        var editor = CodeMirror.fromTextArea(textarea, {
            mode: "xml",
            lineNumbers: true
        });

    })
</script>

