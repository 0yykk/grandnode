@model KnowledgebaseArticleModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
<div class="form-horizontal">
    <div class="form-body">
        <div class="form-group">
            @Html.GrandLabelFor(model => model.Name)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.ParentCategoryId)
            <div class="col-md-9 col-sm-9">
                @Html.GrandDropDownListFor(model => model.ParentCategoryId, new SelectList(Model.Categories, "Id", "Name"))
                @Html.ValidationMessageFor(model => model.ParentCategoryId)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.Content)
            <div class="col-md-9 col-sm-9">
                @Html.EditorFor(model => model.Content, "RichEditor")
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.DisplayOrder)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.DisplayOrder)
                @Html.ValidationMessageFor(model => model.DisplayOrder)
            </div>
        </div>
    </div>
</div>
